@model Kiyaslasana.PL.ViewModels.Auth.RegisterViewModel

<section class="hero" style="padding: var(--space-8) 0;">
    <div class="container">
        <h1 class="hero-title" style="font-size: var(--text-h2);">Kayit Ol</h1>
        <p class="hero-subtitle" style="margin-bottom: 0;">Yeni hesap olustur.</p>
    </div>
</section>

<section class="section" style="padding-top: var(--space-6); padding-bottom: var(--space-8);">
    <div class="container">
        <div class="compare-section" style="max-width: 520px; padding: var(--space-6);">
            <form method="post" action="/kayit-ol" style="display: grid; gap: var(--space-3);">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div>
                    <label asp-for="Email">E-posta</label>
                    <input asp-for="Email" class="search-input" style="width: 100%;" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Password">Sifre</label>
                    <input asp-for="Password" type="password" class="search-input" style="width: 100%;" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword">Sifre Tekrar</label>
                    <input asp-for="ConfirmPassword" type="password" class="search-input" style="width: 100%;" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Kayit Ol</button>
                <p style="margin: 0;">Hesabin var mi? <a href="/giris">Giris yap</a></p>
            </form>
        </div>
    </div>
</section>
