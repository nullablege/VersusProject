@{
    var nav = (ViewData["Nav"] as string ?? string.Empty).ToLowerInvariant();
    var title = ViewData["Title"] as string ?? "Kiyaslasana";
    var description = ViewData["MetaDescription"] as string ?? "Telefon karsilastirma platformu.";
    var robots = ViewData["Robots"] as string;
    var prevUrl = ViewData["PrevUrl"] as string;
    var nextUrl = ViewData["NextUrl"] as string;

    var canonical = ViewData["Canonical"] as string;
    if (string.IsNullOrWhiteSpace(canonical))
    {
        canonical = $"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.PathBase}{Context.Request.Path}";
    }

    string Active(string key) => nav == key ? "active" : string.Empty;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <meta name="description" content="@description" />
    @if (!string.IsNullOrWhiteSpace(robots))
    {
        <meta name="robots" content="@robots" />
    }
    <link rel="canonical" href="@canonical" />
    @if (!string.IsNullOrWhiteSpace(prevUrl))
    {
        <link rel="prev" href="@prevUrl" />
    }
    @if (!string.IsNullOrWhiteSpace(nextUrl))
    {
        <link rel="next" href="@nextUrl" />
    }
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/versus/styles.css" asp-append-version="true" />
</head>
<body>
    <a href="#main-content" class="sr-only skip-to-content">Ana icerige atla</a>

    <header class="header">
        <div class="header-top">
            <div class="container header-inner">
                <a href="/" class="logo">
                    <div class="logo-icon">K</div>
                    <span>Kiyaslasana</span>
                </a>

                <nav class="main-nav" aria-label="Ana navigasyon">
                    <a href="/" class="nav-item @Active("home")"><span>Ana Sayfa</span></a>
                    <a href="/telefonlar" class="nav-item @Active("telefonlar")"><span>Telefonlar</span></a>
                    <a href="/karsilastir" class="nav-item @Active("karsilastir")"><span>Karsilastir</span></a>
                </nav>

                <div class="header-actions">
                    <button class="header-btn mobile-menu-btn" aria-label="Menu">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="3" y1="12" x2="21" y2="12" />
                            <line x1="3" y1="6" x2="21" y2="6" />
                            <line x1="3" y1="18" x2="21" y2="18" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <nav class="sub-nav">
            <div class="container sub-nav-inner">
                <a href="/telefonlar" class="@Active("telefonlar")">Tum Telefonlar</a>
                <a href="/karsilastir" class="@Active("karsilastir")">Karsilastir</a>
                <a href="/sitemap.xml">Sitemap</a>
            </div>
        </nav>
    </header>

    <main id="main-content">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-brand">
                    <a href="/" class="footer-logo">
                        <div class="logo-icon">K</div>
                        <span>Kiyaslasana</span>
                    </a>
                    <p class="footer-description">
                        Telefon modellerini hizli ve SEO uyumlu sayfalarda karsilastirmaniz icin hazirlandi.
                    </p>
                </div>
                <div>
                    <h4 class="footer-title">Kesfet</h4>
                    <ul class="footer-links">
                        <li><a href="/telefonlar">Tum Telefonlar</a></li>
                        <li><a href="/sitemap.xml">Sitemap</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="footer-title">Karsilastir</h4>
                    <ul class="footer-links">
                        <li><a href="/karsilastir">Telefon Karsilastir</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="footer-title">Sistem</h4>
                    <ul class="footer-links">
                        <li><a href="/system/info">/system/info</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/versus/script.js" asp-append-version="true"></script>
    @RenderSection("JsonLd", required: false)
</body>
</html>
